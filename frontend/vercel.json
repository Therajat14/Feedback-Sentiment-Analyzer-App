{
  "version": 2,
  "builds": [{ "src": "next.config.js", "use": "@vercel/next" }],
  "rewrites": [{ "source": "/api/(.*)", "destination": "/api/$1" }],
  "redirects": [
    { "source": "/old-route", "destination": "/new-route", "permanent": true }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [{ "key": "X-Content-Type-Options", "value": "nosniff" }]
    }
  ],
  "env": {
    "MY_SECRET": "@my-secret"
  }
}
